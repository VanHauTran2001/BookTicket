<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Thông Tin Khách Hàng"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Họ và tên"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_name_order"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Nguyễn Văn A"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Số điện thoại"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="09749358113"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Địa chỉ email"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="admin@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="Thông tin lượt đi"
                android:textColor="@color/green_1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Tuyến Xe"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_from"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="From"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:text="=>"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_to"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="To"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Thời gian"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="07:15 08/04/2023"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Số lượng ghế"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_number_seat"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Số ghế"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_list_seat"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Điểm lên xe"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_1"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="BX Mien Tay"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_name_2"
                        android:layout_alignParentStart="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Bến Xe Miền Tây"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Tổng tiền lượt đi"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="650,000đ"
                    android:textColor="@color/green_1"
                    android:textSize="15sp" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent">

                        <TextView
                            android:layout_alignParentStart="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Giá vé lượt đi"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_money_from"
                            android:layout_alignParentEnd="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="650,000đ"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent">

                        <TextView
                            android:layout_alignParentStart="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Phí Thanh Toán"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_money_payment"
                            android:layout_alignParentEnd="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="0đ"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_alignParentStart="true"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Thanh toán mặc định với"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:background="@drawable/background_payment"
                                android:layout_alignParentStart="true"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:padding="7dp"
                                android:text="FUTAPay"
                                android:textColor="@color/white"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_money_payment_defautl"
                            android:layout_alignParentEnd="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="650,000đ"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:background="@drawable/background_button"
                android:id="@+id/btn_payment"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Thanh Toán"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</layout>
